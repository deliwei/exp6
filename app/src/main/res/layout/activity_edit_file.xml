<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EditFileActivity"
    android:orientation="vertical">

    <TextView
        android:text="Edit File"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_textView"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#ff00ff" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name: "
                android:id="@+id/f_name_textView"
                android:layout_gravity="center" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/f_name_autoCompleteTextView"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Content: "
            android:id="@+id/f_content_textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/f_content_editText"
            android:gravity="left|top"
            android:text=""
            android:minLines="3"
            android:maxLines="10" />

    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save File"
        android:id="@+id/save_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:id="@+id/read_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete File"
        android:id="@+id/delete_button" />

</LinearLayout>
